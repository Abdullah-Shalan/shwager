@using frontend.Models.Requests
@model List<JobSummaryDto>
@{
    ViewData["Title"] = "Jobs";
}

<h2>Available Jobs</h2>

<!-- Display errors as a Bootstrap alert -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row g-4">
    @foreach (var job in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h5 class="card-title mb-1">@job.Title</h5>
                        <h6 class="card-subtitle text-muted">@job.Description</h6>
                    </div>
                    <a class="btn btn-primary" asp-action="Assign" asp-route-jobId="@job.Id">
                        Assign
                    </a>
                </div>
            </div>
        </div>
    }
</div>
