@{
    ViewData["Title"] = "Dashboard";
    var isLoggedIn = (bool)ViewBag.IsLoggedIn;
    var userName = ViewBag.UserName ?? "to Shwager";
    var userRole = ViewBag.UserRole ?? "";
    var availableJobs = ViewBag.AvailableJobs as List<frontend.Models.Requests.JobSummaryDto> ?? new
    List<frontend.Models.Requests.JobSummaryDto>();
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome @userName</h1>
        <p class="lead text-muted">
            Your Job Onboarding Dashboard
        </p>
    </div>

    @if (!isLoggedIn)
    {
        <div class="text-center mb-5">
            <a class="btn btn-primary btn-lg me-2" asp-controller="Auth" asp-action="Login">Login</a>
            <a class="btn btn-outline-secondary btn-lg" asp-controller="Auth" asp-action="Register">Register</a>
        </div>

        <!-- Show Available Jobs for Guests -->
        <h3 class="mb-3 text-center">Available Jobs</h3>
        @if (!availableJobs.Any())
        {
            <p class="text-center text-muted">No jobs are available at the moment.</p>
        }
        else
        {
            <div class="row g-4 justify-content-center">
                @foreach (var job in availableJobs)
                {
                    <div class="col-md-4 justify-content-center"">
                        <div class="card h-100">
                            <div class="card-body d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="card-title mb-1">@job.Title</h5>
                                    <h6 class="card-subtitle text-muted">@job.Description</h6>
                                </div>
                                <a class="btn btn-primary" asp-controller="Candidate" asp-action="Assign" asp-route-jobId="@job.Id">
                                    Assign
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        }
    }
    else if (userRole == "Candidate")
    {
        <div class="row g-4 justify-content-center">
            <!-- Jobs Card -->
            <div class="col-md-4 justify-content-center">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">Available Jobs</h5>
                        <p class="card-text">Explore open job positions and apply.</p>
                        <a class="btn btn-primary mt-3" asp-controller="Candidate" asp-action="Jobs">View Jobs</a>
                    </div>
                </div>
            </div>

            <!-- Tasks Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">My Tasks</h5>
                        <p class="card-text">Track your progress on assigned tasks.</p>
                        <a class="btn btn-warning mt-3" asp-controller="Candidate" asp-action="TaskProgress">View Tasks</a>
                    </div>
                </div>
            </div>

            <!-- Profile Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">Profile</h5>
                        <p class="card-text">Manage your personal information and resume.</p>
                        <a class="btn btn-success mt-3" asp-controller="Candidate" asp-action="ViewProfile">View Profile</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (userRole == "Hr")
    {
        <div class="row g-4 justify-content-center">
            <!-- Available Jobs Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="card-title">Available Jobs</h5>
                        <p class="card-text">Explore open job positions and apply.</p>
                        <a class="btn btn-primary mt-3" asp-controller="Hr" asp-action="Jobs">View Jobs</a>
                    </div>
                </div>
            </div>

            <!-- Manage Candidates Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex flex-column justify-content-center text-center">
                        <h5 class="card-title">Manage Candidates</h5>
                        <p class="card-text">Track candidates' progress on posted job applications.</p>
                        <a class="btn btn-primary mt-3" asp-controller="Hr" asp-action="Candidates">View Jobs</a>
                    </div>
                </div>
            </div>
        </div>


    }
</div>
