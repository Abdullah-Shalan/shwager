@model frontend.Models.Requests.CandidateProgressDto

@{
    ViewData["Title"] = "Candidate Progress";
}

<div class="container mt-4">
    <h2 class="mb-4">Progress for @Model.FirstName @Model.LastName</h2>

    @if (Model.TaskProgress == null || !Model.TaskProgress.Any())
    {
        <div class="alert alert-info">
            This candidate has no assigned tasks yet.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.TaskProgress)
                {
                    <tr>
                        <td>@task.Description</td>
                        <td>
                            @if (task.Status == frontend.Models.Requests.Status.Completed)
                            {
                                <span class="badge bg-success">Completed</span>
                                <br />
                                <small class="text-muted">@task.CompletedAt?.ToString("g")</small>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="Candidates" class="btn btn-secondary mt-3">Back to Candidates</a>
</div>
