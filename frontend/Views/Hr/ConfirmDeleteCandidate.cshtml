@model frontend.Models.Requests.CandidateProfileDto
@{
    ViewData["Title"] = "Delete Candidate";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-danger">Confirm Delete Candidate</h3>

                    <p>Are you sure you want to delete this Candidate?</p>

                    <dl class="row">
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        @if (Model.AssignedJobId != null)
                        {
                            <dt class="col-sm-4">AssignedJobTitle:</dt>
                            <dd class="col-sm-8">@Model.AssignedJobTitle</dd>
                        }
                    </dl>

                    <form asp-action="DeleteCandidate" method="post">
                        <input type="hidden" name="candidateId" value="@Model.Id" />

                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="Candidates" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>