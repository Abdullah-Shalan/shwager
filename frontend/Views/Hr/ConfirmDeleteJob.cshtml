@model frontend.Models.Requests.JobSummaryDto
@{
    ViewData["Title"] = "Delete Job";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-danger">Confirm Delete Job</h3>

                    <p>Are you sure you want to delete this Job?</p>

                    <dl class="row">
                        <dt class="col-sm-4">Title:</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <form asp-action="DeleteJob" method="post">
                        <input type="hidden" name="jobId" value="@Model.Id" />

                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="Jobs" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>