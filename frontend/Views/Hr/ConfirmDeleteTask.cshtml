@model frontend.Models.Requests.JobTaskDto
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="card-title mb-4 text-danger">Confirm Delete Task</h3>

                    <p>Are you sure you want to delete this task?</p>

                    <dl class="row">
                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Requires File:</dt>
                        <dd class="col-sm-8">@Model.RequiresFile</dd>

                        <dt class="col-sm-4">Requires Verification:</dt>
                        <dd class="col-sm-8">@Model.RequiresVerification</dd>
                    </dl>

                    <form asp-action="DeleteTask" method="post">
                        <input type="hidden" name="id" value="@ViewBag.TaskId" />

                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="Jobs" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>