@using frontend.Models.Requests
@model JobSummaryDto
@{
    ViewData["Title"] = "Job Details";
    var tasks = Model.JobTasks ?? new List<JobTaskSummaryDto>();
}

<h2>@Model.Title</h2>
<p>@Model.Description</p>

<h4>Tasks</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order</th>
            <th>Description</th>
            <th>Requires File</th>
            <th>Requires Verification</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var t in tasks)
        {
            <tr>
                <td>@t.TaskOrder</td>
                <td>@t.Description</td>
                <td>@t.RequiresFile</td>
                <td>@t.RequiresVerification</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="EditJobTask" asp-route-id="@t.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="DeleteJobTask" asp-route-id="@t.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary mt-2" asp-action="CreateJobTask" asp-route-jobId="@Model.Id">Add New Task</a>
